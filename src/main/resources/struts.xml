<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
   
<struts>
	<package name="main" extends="struts-default">
		<action name="home">
			<result>/pages/index.jsp</result>
		</action>
		<action name="registerEmployee">
			<result>/pages/employee/registerEmployee.jsp</result>
		</action>
		<action name="saveEmployee" class="com.tenshiarts.sadta.controller.EmployeeController" method="save">
			<result name="success">/pages/success.jsp</result>
		</action>
		<action name="listEmployee" class="com.tenshiarts.sadta.controller.EmployeeController" method="listAll">
			<result name="success">/pages/employee/listEmployee.jsp</result>
		</action>
	</package>

</struts>
